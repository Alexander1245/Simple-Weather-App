<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="queryHint">@string/find_your_location</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/small_spacing</item>
    </style>

    <style name="SingleLineTextView" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleTextView" parent="SingleLineTextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:layout_marginEnd">@dimen/medium_spacing</item>
    </style>

    <style name="LargeBodyTextView" parent="SingleLineTextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="LargeTitleTextView" parent="LargeBodyTextView">
        <item name="android:textSize">@dimen/huge_text_size</item>
    </style>
</resources>