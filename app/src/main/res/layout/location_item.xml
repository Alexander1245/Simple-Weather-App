<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/medium_spacing">

        <TextView
            android:id="@+id/textViewCity"
            style="@style/TitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/textViewCurrentTemperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Very huge city name aboba bandit adsasd" />

        <TextView
            android:id="@+id/textViewAqi"
            style="@style/SingleLineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aqi_1d"
            android:layout_marginTop="@dimen/smallest_spacing"
            app:layout_constraintStart_toStartOf="@id/textViewCity"
            app:layout_constraintTop_toBottomOf="@id/textViewCity" />

        <TextView
            android:id="@+id/textViewTemperatureLimits"
            style="@style/SingleLineTextView"
            android:text="@string/temperature_limits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_spacing"
            app:layout_constraintStart_toEndOf="@+id/textViewAqi"
            app:layout_constraintTop_toTopOf="@+id/textViewAqi" />

        <TextView
            android:id="@+id/textViewCurrentTemperature"
            style="@style/LargeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/temperature"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAqi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewCity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>